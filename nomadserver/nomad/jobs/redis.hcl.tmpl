job "redis" {
  datacenters = ["dc1"]

  # Not eligible for scheduling on the special nginx node
  constraint {
    attribute = "$${meta.redis_node}"
    operator  = "=="
    value     = "true"
  }

  group "database" {
    network {
      mode = "bridge"
    }

    volume "redis" {
      type      = "host"
      read_only = false
      source    = "redis"
    }

    service {
      name = "redis-sidekiq"
      tags = ["database", "sidekiq"]
      port = "6379"

      check {
        type = "script"
        name = "redis"
        task = "redis"
        command = "/bin/sh"
        args = ["-c", "[ \"$(redis-cli ping)\" = 'PONG' ] && exit 0; exit 1"]
        interval = "60s"
        timeout  = "5s"
      }

      connect {
        sidecar_service {}
      }
    }

    task "redis" {
      driver = "docker"

      volume_mount {
        volume      = "redis"
        destination = "/data"
        read_only   = false
      }

      config {
        image = "redis:6.2.1"
        ports = ["6379"]
      }

      resources {
        cpu    = ${ redis_cpu_hertz }
        memory = ${ redis_memory }
      }
    }
  }
}
