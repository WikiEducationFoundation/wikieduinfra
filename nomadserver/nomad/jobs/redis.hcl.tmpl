job "redis" {
  datacenters = ["dc1"]

  group "database" {
    network {
      mode = "bridge"
    }

    ephemeral_disk {
      migrate = true
      size    = ${ redis_memory }
      sticky  = true
    }

    service {
      name = "redis-sidekiq"
      tags = ["database", "sidekiq"]
      port = "6379"

      check {
        type = "script"
        name = "redis"
        task = "redis"
        command = "/bin/sh"
        args = ["-c", "[ \"$(redis-cli ping)\" = 'PONG' ] && exit 0; exit 1"]
        interval = "60s"
        timeout  = "5s"
      }

      connect {
        sidecar_service {}
      }
    }

    task "redis" {
      driver = "docker"

      config {
        image = "redis:6.2.1"
        ports = ["6379"]
        mounts = [{
          type     = "bind"
          source   = "../alloc/data"
          target   = "/data"
          readonly = false
        }]
      }

      resources {
        cpu    = ${ redis_cpu_hertz }
        memory = ${ redis_memory }
      }
    }
  }
}
